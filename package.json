{
    "name": "emc",
    "displayName": "Even More Command",
    "description": "Add some utility tools and custom command to minecraft function",
    "version": "0.0.1",
    "publisher": "remtori",
    "engines": {
        "vscode": "^1.24.0"
    },
    "categories": [
		"Programming Languages",
		"Other"
	],
    "activationEvents": [
        "workspaceContains:**/pack.mcmeta",
        "onCommand:mcfunction.HideFlags"
    ],
    "main": "./out/extension",
    "contributes": {
        "languages": [
			{
				"id": "mcfunction",
				"extensions": [
					".mcfunction"
				],
				"configuration": "./lang/configuration.json"
			}
        ],
        "grammars": [
			{
				"language": "mcfunction",
				"scopeName": "source.mcfunction",
				"path": "./lang/mcfunction.json"
			}
		],
        "commands": [
            {
                "command": "mcfunction.HideFlags",
                "title": "HideFlags Helper"
            },            
            {
                "command": "mcfunction.RawJsonGen",
                "title": "Raw JSON Generator"
            }
        ]
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "eslint": "^4.11.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
